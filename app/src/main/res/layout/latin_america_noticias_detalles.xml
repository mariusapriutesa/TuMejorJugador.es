<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApiClases.LatinAmericaNoticiasDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="6dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/noticia_desc_title"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:id="@+id/img_news"
                        android:scaleType="fitXY"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/noticia_desc_source"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black_shade_2"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/noticia_desc_published"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="6dp"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/noticia_desc_full"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_margin="8dp"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>