<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idRLBSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_shade_1"
    android:padding="4dp">

    <!--text view for displaying jugador nombre-->
    <TextView
        android:id="@+id/idTVJugadorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:padding="4dp"
        android:text="Jugador Nombre:"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!--image view for displaying jugador image-->

    <ImageView
        android:id="@+id/idIVJugador"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idTVJugadorName"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@drawable/ic_launcher_background" />

    <!--text view for displaying jugadordescription-->
    <TextView
        android:id="@+id/idTVJugadorDesc"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVJugadorName"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/idIVJugador"
        android:layout_toRightOf="@id/idIVJugador"
        android:padding="3dp"
        android:text="Description"
        android:textColor="@color/white" />




    <!--text view for displaying jugador price-->
    <TextView
        android:id="@+id/idTVJugadorPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVJugadorDesc"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/idIVJugador"
        android:padding="3dp"
        android:text="Precio:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVJugadorPrice"
        android:orientation="horizontal"
        android:weightSum="2">

        <!--button for editing jugador-->
        <Button
            android:id="@+id/idBtnEditJugador"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="Edit Jugador"
            android:textAllCaps="false" />

        <!--button for viewing jugador details-->
        <Button
            android:id="@+id/idBtnVIewDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="View Details"
            android:textAllCaps="false" />


    </LinearLayout>


</RelativeLayout>